<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kindling.com.helloworld.MatchingActivity">

    <ImageView
        android:id="@+id/imageTopView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        android:src="@drawable/tan_msg_background" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageTopView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="top|right"
        android:scaleType="centerCrop"
        android:src="@drawable/msg_btn" />


    <ImageButton
        android:id="@+id/settingButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageTopView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="top|left"
        android:scaleType="centerCrop"
        android:src="@drawable/header_settings" />

    <ImageView
        android:id="@+id/machingOwl"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageTopView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top|left"
        android:scaleType="centerCrop"
        android:src="@drawable/kindling_owl_large" />


    <ImageView
        android:id="@+id/backDrop"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/imageTopView"
        android:layout_toEndOf="@+id/settingButton"
        android:layout_toRightOf="@+id/settingButton"
        android:src="@drawable/candidate_backdrop" />

    <ImageView
        android:id="@+id/matching_button"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignEnd="@+id/imageButton"
        android:layout_alignRight="@+id/imageButton"
        android:layout_below="@+id/backDrop"
        android:src="@drawable/matchingbtns_backdrop" />

    <ImageButton
        android:id="@+id/leftButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/matching_button"
        android:layout_gravity="center"
        android:layout_marginRight="-20dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/machingOwl"
        android:layout_toStartOf="@+id/machingOwl"
        android:scaleType="centerCrop"
        android:src="@drawable/swipe_left_btn" />

    <ImageButton
        android:id="@+id/rightButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/leftButton"
        android:layout_gravity="center"
        android:layout_marginLeft="-15dp"
        android:layout_toEndOf="@+id/machingOwl"
        android:layout_toRightOf="@+id/machingOwl"
        android:scaleType="centerCrop"
        android:src="@drawable/swipe_right_btn" />

    <ImageButton
        android:id="@+id/informationButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/matching_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:scaleType="centerCrop"
        android:src="@drawable/information_btn" />

</RelativeLayout>
