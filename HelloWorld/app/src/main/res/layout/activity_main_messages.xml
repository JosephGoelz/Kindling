<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kindling.com.helloworld.MainMessagesActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:scaleType="center"
        android:src="@drawable/tan_msg_background"
        android:id="@+id/imageTopView1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/white_msg_background"
        android:layout_below="@+id/imageTopView1"
        android:id="@+id/imageView1"
        />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/msg_user_dropshadow"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/user_chatting_Icon1"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_above="@+id/imageView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tan_msg_background"
        android:id="@+id/imageView2"
        android:layout_below="@+id/imageView1"
        />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/msg_user_dropshadow"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/user_chatting_Icon2"
        android:layout_above="@+id/imageView2"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/white_msg_background"
        android:layout_below="@+id/imageView2"
        android:id="@+id/imageView3"
        />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/msg_user_dropshadow"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/user_chatting_Icon3"
        android:layout_above="@+id/imageView3"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tan_msg_background"
        android:layout_below="@+id/imageView3"
        android:id="@+id/imageView4"
        />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/msg_user_dropshadow"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/user_chatting_Icon4"
        android:layout_above="@+id/imageView4"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/white_msg_background"
        android:layout_below="@+id/imageView4"
        android:id="@+id/imageView5"
        />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/msg_user_dropshadow"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/user_chatting_Icon5"
        android:layout_above="@+id/imageView5"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tan_msg_background"
        android:layout_below="@+id/imageView5"
        android:id="@+id/imageView6"
        />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/msg_user_dropshadow"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/user_chatting_Icon6"
        android:layout_above="@+id/imageView6"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:id="@+id/chat_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/chat_hint"
        android:inputType="text"
        android:background="#fef7ec"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_button"
        android:id="@+id/send_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/user_chatting_Icon1"
        android:layout_toRightOf="@+id/user_chatting_Icon1"
        android:layout_toEndOf="@+id/user_chatting_Icon1"
        android:id="@+id/chat_text1"/>
    <TextView
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:id="@+id/chat_text2"
        android:layout_alignTop="@+id/user_chatting_Icon2"
        android:layout_toRightOf="@+id/user_chatting_Icon2"
        android:layout_toEndOf="@+id/user_chatting_Icon2" />
    <TextView
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:id="@+id/chat_text3"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/user_chatting_Icon3"
        android:layout_toEndOf="@+id/user_chatting_Icon3" />
    <TextView
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:id="@+id/chat_text4"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:id="@+id/chat_text5"
        android:layout_alignTop="@+id/user_chatting_Icon5"
        android:layout_toRightOf="@+id/user_chatting_Icon5"
        android:layout_toEndOf="@+id/user_chatting_Icon5" />
    <TextView
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:id="@+id/chat_text6"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_toRightOf="@+id/user_chatting_Icon6"
        android:layout_toEndOf="@+id/user_chatting_Icon6" />
</RelativeLayout>
